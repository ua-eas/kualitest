<?xml version="1.0" encoding="UTF-8"?>
<tag-handlers xmlns="test.kuali.org">
    <handler>
        <application>KC</application>
        <tag-name>input</tag-name>
        <handler-class-name>org.kuali.test.handlers.HiddenInputTagHandler</handler-class-name>
        <tag-matchers>
            <tag-matcher>
                <match-type>current</match-type>
                <tag-name>input</tag-name>
                <match-attributes>
                    <match-attribute>
                        <name>type</name>
                        <value>hidden</value>
                    </match-attribute>
                    <match-attribute>
                        <name>name</name>
                        <!--  can use "|" to seperate "or" values for matching -->
                        <value>docNum|lt</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
        </tag-matchers>
        <handler-name>kfs11</handler-name>
    </handler>

    <!-- lookup handlers -->    
    <handler>
        <tag-name>div</tag-name>
        <handler-class-name>org.kuali.test.handlers.KualiLookupCriteriaTagHandler</handler-class-name>
        <tag-matchers>
            <tag-matcher>
                <match-type>current</match-type>
                <tag-name>div</tag-name>
                <match-attributes>
                    <match-attribute>
                        <name>id</name>
                        <value>lookup-criteria</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
        </tag-matchers>
        <handler-name>kuali10</handler-name>
    </handler>
    <handler>
        <tag-name>table</tag-name>
        <handler-class-name>org.kuali.test.handlers.KualiLookupResultsTagHandler</handler-class-name>
        <tag-matchers>
            <tag-matcher>
                <match-type>current</match-type>
                <tag-name>table</tag-name>
                <match-attributes>
                    <match-attribute>
                        <name>id</name>
                        <value>row</value>
                    </match-attribute>
                    <match-attribute>
                        <name>class</name>
                        <value>datatable-100</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
        </tag-matchers>
        <handler-name>kuali11</handler-name>
    </handler>
    
    <handler>
        <tag-name>td</tag-name>
        <handler-class-name>org.kuali.test.handlers.KualiLookupTdTagHandler</handler-class-name>
        <tag-matchers>
            <tag-matcher>
                <match-type>current</match-type>
                <tag-name>td</tag-name>
                <match-attributes>
                    <match-attribute>
                        <name>class</name>
                        <value>infocell|numbercell</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
            <tag-matcher>
                <match-type>parent</match-type>
                <tag-name>tr</tag-name>
                <search-definition>1</search-definition>
                <match-attributes>
                    <match-attribute>
                        <name>class</name>
                        <value>odd|even</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
        </tag-matchers>
        <label-matcher>
            <tag-matcher>
                <match-type>parent</match-type>
                <tag-name>table</tag-name>
                <search-definition>*</search-definition>
                <match-attributes>
                    <match-attribute>
                        <name>id</name>
                        <value>row</value>
                    </match-attribute>
                    <match-attribute>
                        <name>class</name>
                        <value>datatable-100</value>
                    </match-attribute>
                </match-attributes>
            </tag-matcher>
            <tag-matcher>
                <match-type>child</match-type>
                <tag-name>thead</tag-name>
                <search-definition>1</search-definition>
                <match-attributes>
                </match-attributes>
            </tag-matcher>
            <tag-matcher>
                <match-type>child</match-type>
                <tag-name>tr</tag-name>
                <search-definition>1</search-definition>
                <match-attributes>
                </match-attributes>
            </tag-matcher>
            <tag-matcher>
                <match-type>child</match-type>
                <tag-name>th</tag-name>
                <search-definition>I</search-definition>
                <match-attributes>
                    <name>class</name>
                    <value>sortable|sortable*</value>
                </match-attributes>
            </tag-matcher>
        </label-matcher>
        <handler-name>kuali12</handler-name>
    </handler>

</tag-handlers>